<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    >
    <RelativeLayout
        android:id="@+id/tmpLayout" 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
    	>
        <ImageView
            android:id="@+id/tmpbnr1"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/matches_list_banner"
    		android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/litscore_banner"
    		android:layout_centerVertical="true"
    		android:layout_toLeftOf="@+id/tmpbnr1"
    		android:layout_marginRight="23dip"
            />
    </RelativeLayout>
    <View 
        android:id="@+id/dsgfgdfhgfhg"
        android:layout_width="match_parent"
    	android:layout_height="1dip"
    	android:layout_below="@+id/tmpLayout"
    	android:background="#000000"
        />
    <ListView 
        android:id="@+id/matchesList_ListView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@+id/dsgfgdfhgfhg"
    	android:cacheColorHint="#00000000"
    	android:divider="@color/black"
    	android:dividerHeight="1dip"
    	>
        
    </ListView>
</RelativeLayout>