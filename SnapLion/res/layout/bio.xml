<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bio_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<LinearLayout
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/imAdview"
		android:layout_alignParentTop="true"/>  
	<LinearLayout
        android:id="@+id/bio_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp" >
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp" 
    android:layout_weight="1"
    android:layout_below="@+id/bio_top_bar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bio_tab_bar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:background="@drawable/trans_bg"
        android:orientation="vertical" 
        >

        <ImageView
            android:id="@+id/bio_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <WebView
                android:id="@+id/bio_comments"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="all"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layerType="software"
	            />
        <View 
            android:id="@+id/bottomTabPlaceHolder"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>
<LinearLayout
        android:id="@id/bio_tab_bar"
        android:layout_width="fill_parent"
        android:layout_height="58dip"
        android:orientation="horizontal"
        android:visibility="gone" 
        android:layout_weight="1"
        android:background="@drawable/tabs_bottom_bg"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>