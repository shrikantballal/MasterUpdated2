<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/news_cell_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="5dp">
        <RelativeLayout 
            android:id="@+id/imageRoot"
            android:layout_width="70dp" 
            android:layout_height="70dp" 
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            >
            <ProgressBar 
                android:id="@+id/promolist_ProgressBar_progress"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:layout_marginRight="5dp"
	            android:layout_centerInParent="true"
	            style="@android:style/Widget.ProgressBar.Small"
	            android:visibility="gone"
	            />
            <ImageView 
                android:id="@+id/promolist_ImageView_thumbimage"
	            android:layout_width="70dp" 
	            android:layout_height="70dp" 
	            android:layout_marginRight="5dp"
	            android:layout_centerInParent="true"/>
        </RelativeLayout>
   		<LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/promolist_TextView_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:singleLine="true" 
                android:textColor="@color/white" 
                android:textSize="13sp" 
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/promolist_TextView_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:lines="2" 
                android:textColor="@color/white" 
                android:textSize="11sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>